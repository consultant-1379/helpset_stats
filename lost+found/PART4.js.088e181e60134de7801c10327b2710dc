var C4_4_2=
"<div id=\"content\" class=\"body-content\">\n"+
"<h3><a name=\"JKSKeystore\"></a><span class=\"CHAPNUMBER\">4.4.2 &nbsp; </span><span class=\"CHAPTITLE\"><a name=\"id_wr01\"></a><a name=\"CHAPTER4.4.2\" href='javascript:parent.parent.sC2(\"TOP\")' class=\"CHAPLINK\">Generating\n" +
"JKS Keystore Files</a></span></h3>\n" +
"\n" +
"<p>\n" +
"To generate JKS keystore file run the below command:</p>\n" +
"\n" +
"<p>\n" +
"<tt class=\"input\"><b>/eniq/sw/runtime/java/bin/keytool -genkeypair -keystore\n" +
"&lt;<i class=\"var\">filename.jks</i>&gt; -storepass &lt;<i class=\"var\">password</i>&gt; -alias\n" +
"eniq -keypass &lt;<i class=\"var\">password</i>&gt; -keysize 2048 -keyalg RSA -sigalg\n" +
"SHA256withRSA -dname \"CN=&lt;<i class=\"var\">Full_Host_Name</i>&gt;\" -validity\n" +
"3650</b></tt></p>\n" +
"\n" +
"<dl class=\"note\"><dt><b>Note: &nbsp;</b></dt><dd><tt class=\"file-path\">&lt;<i class=\"var\">password</i>></tt> should\n" +
"be same wherever it is used.<p>\n" +
"<tt class=\"file-path\">&lt;<i class=\"var\">Full_Host_Name</i>></tt> is used\n" +
"as the servers \"Common name\".  If DNS is not configured on the server\n" +
"use IP address of the server instead of \"Common Name\". The common\n" +
"name is also used during Certificate Renewal (See <a href='javascript:parent.parent.parent.showAnchor(\"CertRenewal\")' class=\"link\"> Section 3.4.9</a>). </p>\n" +
"<p>\n" +
"Only the following special characters are allowed to be used in\n" +
"the Common Name: </p>\n" +
"\n" +
"<ul>\n" +
"<li class=\"UNORD\" id=\"THSSTYLE0\"><tt class=\"LITERALMONO\">:</tt> (colon)</li>\n" +
"<li class=\"UNORD\" id=\"THSSTYLE1\"><tt class=\"LITERALMONO\">_</tt> (underscore)</li>\n" +
"<li class=\"UNORD\" id=\"THSSTYLE1\"><tt class=\"LITERALMONO\">-</tt> (hyphen)</li>\n" +
"<li class=\"UNORD\" id=\"THSSTYLE1\"> <tt class=\"LITERALMONO\">@</tt> (at)</li>\n" +
"<li class=\"UNORD\" id=\"THSSTYLE1\"><tt class=\"LITERALMONO\">.</tt> (period)</li></ul></dd></dl><br />\n" +
"\n"+
"</div>\n";

var C4_4_3=
"<div id=\"content\" class=\"body-content\">\n"+
"<h3><span class=\"CHAPNUMBER\">4.4.3 &nbsp; </span><span class=\"CHAPTITLE\"><a name=\"id_8bla\"></a><a name=\"CHAPTER4.4.3\" href='javascript:parent.parent.sC2(\"TOP\")' class=\"CHAPLINK\">Generating CSR File</a></span></h3>\n" +
"\n" +
"<p>\n" +
"To generate a Certificate Signing Request file run the below command.</p>\n" +
"\n" +
"<p>\n" +
"<tt class=\"input\"><b>/eniq/sw/runtime/jdk/bin/keytool -certreq -v -alias eniq\n" +
"-file &lt;<i class=\"var\">hostname.csr</i>&gt; -keystore &lt;<i class=\"var\">filename.jks</i>&gt; -storetype JKS -storepass &lt;<i class=\"var\">password</i>></b></tt></p>\n" +
"\n" +
"<dl class=\"note\"><dt><b>Note: &nbsp;</b></dt><dd><tt class=\"file-path\">&lt;<i class=\"var\">password</i>></tt> should\n" +
"be same wherever it is used.</dd></dl><br />\n" +
"\n"+
"</div>\n";

var C4_4_4=
"<div id=\"content\" class=\"body-content\">\n"+
"<h3><span class=\"CHAPNUMBER\">4.4.4 &nbsp; </span><span class=\"CHAPTITLE\"><a name=\"id_tc3n\"></a><a name=\"CHAPTER4.4.4\" href='javascript:parent.parent.sC2(\"TOP\")' class=\"CHAPLINK\">Converting JKS into PKCS12 Format</a></span></h3>\n" +
"\n" +
"<p>\n" +
"Convert JKS keystore, created above, into <tt class=\"file-path\">PKCS12</tt> keystore file using the following command.</p>\n" +
"\n" +
"<p>\n" +
"<tt class=\"input\"><b>/eniq/sw/runtime/java/bin/keytool -importkeystore -srckeystore\n" +
"&lt;<i class=\"var\">filename.jks</i>&gt; -destkeystore &lt;<i class=\"var\">filename.pkcs12</i>&gt; -srcstoretype JKS -deststoretype PKCS12 -srcstorepass &lt;<i class=\"var\">password</i>&gt; -deststorepass &lt;<i class=\"var\">password</i>&gt; -srcalias\n" +
"eniq -destalias eniq -srckeypass &lt;<i class=\"var\">password</i>&gt; -destkeypass\n" +
"&lt;<i class=\"var\">password</i>></b></tt></p>\n" +
"\n" +
"<dl class=\"note\"><dt><b>Note: &nbsp;</b></dt><dd><tt class=\"file-path\">&lt;<i class=\"var\">password</i>></tt> should\n" +
"be same wherever it is used.</dd></dl><br />\n" +
"\n"+
"</div>\n";

var C4_4_5=
"<div id=\"content\" class=\"body-content\">\n"+
"<h3><span class=\"CHAPNUMBER\">4.4.5 &nbsp; </span><span class=\"CHAPTITLE\"><a name=\"id_4b5x\"></a><a name=\"CHAPTER4.4.5\" href='javascript:parent.parent.sC2(\"TOP\")' class=\"CHAPLINK\">Exporting Private key</a></span></h3>\n" +
"\n" +
"<p>\n" +
