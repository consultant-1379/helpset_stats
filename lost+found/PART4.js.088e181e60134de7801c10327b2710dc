var C4_4_7=
"<div id=\"content\" class=\"body-content\">\n"+
"<h3><span class=\"CHAPNUMBER\">4.4.7 &nbsp; </span><span class=\"CHAPTITLE\"><a name=\"id_teob\"></a><a name=\"CHAPTER4.4.7\" href='javascript:parent.parent.sC2(\"TOP\")' class=\"CHAPLINK\">Combine Private Key and CA Signed\n" +
